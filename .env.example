
# ================================
# üåê CONVERGIO CONFIGURATION EXAMPLE
# ================================
# Copy this file to .env and customize for your environment
# Never commit actual .env files to version control

# ================================
# üöÄ ENVIRONMENT & DEBUG
# ================================
ENVIRONMENT=development
DEBUG=true
PROJECT_VERSION=2030.1.0

# ================================
# üîê SECURITY & AUTHENTICATION
# ================================
# Generate a strong JWT secret (64+ characters recommended)
JWT_SECRET=your_super_secure_jwt_secret_that_should_be_very_long_and_random_at_least_64_chars
JWT_ALGORITHM=RS256

# ================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=convergio_db
POSTGRES_USER=convergio_user
POSTGRES_PASSWORD=your_secure_database_password_min_12_chars

# Full database URL (alternative to individual components)
# DATABASE_URL=postgresql://convergio_user:password@localhost:5432/convergio_db

# ================================
# üöÄ REDIS CACHE CONFIGURATION  
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Full Redis URL (alternative to individual components)
# REDIS_URL=redis://localhost:6379/0

# ================================
# üåç NETWORK & HOSTING
# ================================
# Configurable host for multi-environment support
DEFAULT_HOST=localhost

# Service ports (configurable for different environments)
FRONTEND_PORT=4000
BACKEND_PORT=9000
API_PORT=9000
ADMIN_PORT=9001

# CORS allowed origins (automatically generated from above, or set manually)
# CORS_ALLOWED_ORIGINS=http://localhost:4000,http://localhost:5173,http://localhost:9000,http://127.0.0.1:4000,http://127.0.0.1:5173,http://127.0.0.1:9000

# Trusted hosts for production
TRUSTED_HOSTS=localhost,127.0.0.1,*.convergio.io

# ================================
# ü§ñ AI SERVICES CONFIGURATION
# ================================
# OpenAI Configuration
OPENAI_API_KEY=sk-......
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Anthropic Configuration  
ANTHROPIC_API_KEY=sk....
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# GraphFlow AI orchestration
GRAPHFLOW=true

# ================================
# üë§ USER & SESSION CONFIGURATION
# ================================
# Default user IDs for system operations
DEFAULT_USER_ID=system_user
DEFAULT_ANONYMOUS_USER=system_anonymous
DEFAULT_TEST_USER=system_test_user

# ================================
# üõ†Ô∏è FEATURE CONFIGURATION
# ================================
# Reference agent content truncation length
REFERENCE_AGENT_TRUNCATE_LENGTH=3000

# Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE_AUTH=5
RATE_LIMIT_PER_MINUTE_API=100
RATE_LIMIT_PER_MINUTE_ADMIN=10

# ================================
# üìä MONITORING & OBSERVABILITY
# ================================
# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Structured logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=30

# ================================
# üîí PRODUCTION SECURITY SETTINGS
# ================================
# Set these for production environments

# Force HTTPS in production
# FORCE_HTTPS=true

# Session security
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=strict

# Content Security Policy
# CSP_ENABLED=true

# ================================
# üìß EMAIL CONFIGURATION (Optional)
# ================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_email_password
# SMTP_USE_TLS=true

# ================================
# üîÑ BACKGROUND TASKS (Optional)
# ================================
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ================================
# üß™ TESTING CONFIGURATION
# ================================
# TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/convergio_test
# TEST_REDIS_URL=redis://localhost:6379/15

# ================================
# üöÄ DEPLOYMENT CONFIGURATION
# ================================
# Container and orchestration settings
# CONTAINER_PORT=8000
# WORKERS=4
# MAX_REQUESTS=1000
# MAX_REQUESTS_JITTER=100

# Health check paths
# HEALTH_CHECK_PATH=/health
# READINESS_CHECK_PATH=/health/detailed

# ================================
# üìù NOTES
# ================================
# 1. In production, use strong, unique passwords and secrets
# 2. Consider using environment-specific files (.env.production, .env.staging)
# 3. Use a secrets management system for production deployments
# 4. Regularly rotate secrets and API keys
# 5. Monitor logs for security events and configuration warnings