# 🛠️ Convergio Backend - Development Dockerfile
FROM python:3.11-slim

# 🔧 Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    DEBIAN_FRONTEND=noninteractive

# 📦 Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# 📁 Set working directory
WORKDIR /app

# 📦 Copy requirements first (for better caching)
COPY requirements.txt .

# 🔧 Install Python dependencies + development tools
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir pytest pytest-cov pytest-asyncio black isort flake8

# 📁 Copy application code
COPY . .

# 🚀 Expose port
EXPOSE 9000

# 🎯 Development command with hot reload
CMD ["python", "-m", "uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "9000", "--reload", "--log-level", "debug"]